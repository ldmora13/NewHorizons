---
import TourCard from "@src/components/TourCard.astro";
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";

/* =========================
   Types
========================= */
export interface TourSectionProps {
  id?: string;
  title?: string;
  description?: string;
  maxCountries?: number;
}

/* =========================
   Props & Defaults
========================= */
const {
  id = "countries",
  title = "Nuestro Destino Principal",
  description = "Nos especializamos en inmigración a Francia. Consulta nuestros programas activos y los destinos que habilitaremos próximamente.",
  maxCountries = 8,
} = Astro.props as TourSectionProps;

/* =========================
   Fetch & Prepare Countries
========================= */
const countries = await getCollection("countries");

const sortedCountries = countries.sort((a, b) => {
  const investmentA = a.data.investment || 0;
  const investmentB = b.data.investment || 0;
  return investmentA - investmentB;
});

const visibleCountries = sortedCountries.slice(0, maxCountries);
---

<!-- Countries Section -->
<section id={id} class="relative py-16 md:py-20 overflow-hidden">
  
  <div class="max-w-6xl mx-auto px-4 relative">

    <!-- Heading -->
    <div class="mb-12 text-center">
      <h2 class="text-3xl md:text-4xl font-semibold text-white" data-i18n="countries.title">
        {title}
      </h2>

      {description && (
        <p class="mt-3 text-white/70 max-w-2xl mx-auto" data-i18n="countries.description">
          {description}
        </p>
      )}
    </div>

    <!-- France Main Card (centered, large) -->
    <div class="grid grid-cols-1 mb-10 w-full md:w-1/2 mx-auto">
      <article class="group rounded-2xl border border-white/10 bg-white/5 backdrop-blur overflow-hidden">
        <div class="relative aspect-video overflow-hidden">
          <a href="/programs">
            <img
              src="/img/countries/france/3.webp"
              alt="Francia"
              loading="lazy"
              class="w-full h-full object-cover transition duration-500 group-hover:scale-110"
            />
            <span class="absolute top-3 left-3 rounded-full bg-black/60 px-3 py-1 text-xs text-white" data-i18n="countries.mainBadge">
              Residente Permanente
            </span>
          </a>
        </div>

        <div class="p-5">
          <h3 class="text-lg font-semibold text-white hover:text-blue-400">
            <a href="/programs" data-i18n="countries.mainTitle">Programas de Inmigración a Francia</a>
          </h3>

          <p class="mt-1 text-sm text-white/70" data-i18n="countries.mainDescription">
            Francia, en el corazón de Europa Occidental, ofrece una calidad de vida excepcional, acceso al mercado de la UE y un sistema social de referencia mundial.
          </p>

          <div class="mt-3 flex justify-between text-sm text-white/80">
            <span class="flex items-center gap-2">
              <Icon name="bi:clock" />
              <span data-i18n="countries.titreDeSeJour">Titre de Séjour</span>
            </span>
            <span class="font-semibold text-white">€3,500+</span>
          </div>
        </div>
      </article>
    </div>

    <!-- Coming Soon Heading -->
    <h2 class="text-2xl font-semibold text-white text-center mt-20 mb-5" data-i18n="countries.comingSoon">
      Próximamente
    </h2>

    <!-- Upcoming Countries Grid -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {visibleCountries.map((country) => (
        <TourCard country={country} />
      ))}
    </div>

  </div>
</section>
