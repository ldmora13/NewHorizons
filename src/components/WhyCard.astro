---
import { Icon } from "astro-icon/components";

/* =========================
   Types
========================= */
export interface WhyCardProps {
  icon: string;      // example: "bi:person-badge"
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props as WhyCardProps;
---

<div class="rounded-2xl border border-white/10 bg-black/30 p-6 backdrop-blur">
  <div class="flex items-center gap-3">
    <div class="h-10 w-10 rounded-xl bg-white/10 flex items-center justify-center">
      <Icon name={icon} class="w-5 h-5 text-white" />
    </div>
    <h3 class="text-lg font-semibold text-white">
      {title}
    </h3>
  </div>

  <p class="mt-3 text-white/70">
    {description}
  </p>
</div>