---
import WhyCard from "@src/components/WhyCard.astro";

/* =========================
   Types
========================= */
export interface WhyItem {
  icon: string;
  title: string;
  description: string;
}

export interface WhyAboutSectionProps {
  id?: string;
  title: string;
  backgroundImage: string;
  items: WhyItem[];
}

/* =========================
   Default / Sample Data
========================= */
const {
  id = "why-about",
  titleKey = "about.why.title",
  backgroundImage = "/img/countries/france/2.jpg",
  items = [
    {
      icon: "bi:mortarboard",
      titleKey: "about.why.expertTitle",
      descriptionKey: "about.why.expertDesc",
    },
    {
      icon: "bi:building-check",
      titleKey: "about.why.adminTitle",
      descriptionKey: "about.why.adminDesc",
    },
    {
      icon: "bi:heart-pulse",
      titleKey: "about.why.humanTitle",
      descriptionKey: "about.why.humanDesc",
    },
    {
      icon: "bi:lightning-charge",
      titleKey: "about.why.speedTitle",
      descriptionKey: "about.why.speedDesc",
    },
    {
      icon: "bi:shield-check",
      titleKey: "about.why.trustTitle",
      descriptionKey: "about.why.trustDesc",
    },
    {
      icon: "bi:globe",
      titleKey: "about.why.globalTitle",
      descriptionKey: "about.why.globalDesc",
    },
  ],
} = Astro.props as WhyAboutSectionProps;
---

<!-- Why About Section -->
<section
  id={id}
  class="relative py-16 md:py-20 overflow-hidden mb-6"
  style={`background-image: url('${backgroundImage}');
         background-size: cover;
         background-position: center;
         background-attachment: fixed;`}
>
  <!-- overlay -->
  <div class="absolute inset-0 bg-linear-to-b from-slate-950/70 via-slate-950/50 to-slate-950/80"></div>

  <div class="relative z-10 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-semibold text-white text-shadow mb-10" data-i18n={titleKey}>
      Why Choose New Horizons
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((item) => (
        <WhyCard
          icon={item.icon}
          titleKey={item.titleKey}
          descriptionKey={item.descriptionKey}
        />
      ))}
    </div>
  </div>
</section>
