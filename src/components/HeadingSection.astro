---
export interface HeadingSectionProps {
  title: string;
  description?: string;
  backgroundImage: string;
}

/* =========================
   Sample Data
========================= */
const {
  title = "Page Heading",
  description,
  backgroundImage = "/img/passport-european-map.jpg",
} = Astro.props as HeadingSectionProps;
---

<!-- Heading Section -->
<div
  class="relative pt-32 pb-20 overflow-hidden"
  style={`background-image:url('${backgroundImage}');background-size:cover;background-position:center;`}
>
  <!-- overlay -->
  <div class="absolute inset-0 bg-linear-to-t from-slate-950/80 via-slate-950/70 to-slate-950/40"></div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 text-center">
    <h1 class="text-3xl md:text-4xl font-semibold text-white">
      {title}
    </h1>

    {description && (
      <p class="mt-4 text-white/70 max-w-2xl mx-auto">
        {description}
      </p>
    )}
  </div>
</div>