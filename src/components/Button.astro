---
export type ButtonVariant = "primary" | "outline" | "success" | "white";

export interface ButtonProps {
  href?: string;
  label?: string;       // ⬅️ sekarang OPTIONAL
  variant?: ButtonVariant;
  className?: string;
}

const props = Astro.props as ButtonProps;

const variant: ButtonVariant = props.variant ?? "primary";

const base =
  "inline-flex items-center justify-center rounded-xl text-sm font-semibold transition";

const variants: Record<ButtonVariant, string> = {
  primary:
    "hover:scale-110 rounded-xl bg-black hover:bg-gray-800 inline-flex items-center justify-center gap-2 px-6 py-3 text-sm font-semibold text-white shadow-lg transition",
  outline:
    "hover:scale-110 rounded-xl border border-white/30 px-6 py-3 inline-flex items-center justify-center gap-2 text-sm font-semibold text-white hover:bg-white/10 transition",
  success:
    "hover:scale-110 rounded-xl bg-green-700 hover:bg-green-800 inline-flex items-center justify-center gap-2 px-6 py-3 text-sm font-semibold text-white shadow-lg transition",
  white:
    "hover:scale-110 rounded-xl bg-white hover:bg-gray-100 inline-flex items-center justify-center gap-2 px-6 py-3 text-sm font-semibold text-black shadow-lg transition",
};
---

{props.href ? (
  <a
    href={props.href}
    class={`${base} ${variants[variant]} ${props.className ?? ""}`}
  >
    <slot>{props.label}</slot>
  </a>
) : (
  <button
    type="button"
    class={`${base} ${variants[variant]} ${props.className ?? ""}`}
  >
    <slot>{props.label}</slot>
  </button>
)}
