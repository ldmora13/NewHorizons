---
/* =========================
   Types
========================= */
export interface StoryStat {
  value: string;
  label: string;
}

export interface StorySectionProps {
  id?: string;
  title: string;
  paragraphs: string[];
  stats: StoryStat[];
}

/* =========================
   Sample Data
========================= */
const {
  id = "story",
  titleKey = "about.story.title",
  paragraphKeys = [
    "about.story.paragraph1",
    "about.story.paragraph2",
    "about.story.paragraph3",
  ],
  stats = [
    { value: "+16k", labelKey: "why.cards.peopleAccompanied.title" },
    { value: "91%", labelKey: "why.cards.successRate.title" },
    { value: "+15", labelKey: "why.cards.experience.title" },
    { value: "52k", labelKey: "why.cards.successfulCases.title" },
  ],
} = Astro.props as StorySectionProps;
---

<!-- Story Section -->
<section
  id={id}
  class="relative py-16 md:py-20 overflow-hidden"
>
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">

      <!-- Text -->
      <div>
        <h2 class="text-3xl md:text-4xl font-semibold text-white" data-i18n={titleKey}>
          Our Story
        </h2>

        {paragraphKeys.map((key) => (
          <p class="mt-4 text-white/70 leading-relaxed" data-i18n={key}>
            ...
          </p>
        ))}
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 gap-6">
        {stats.map((stat) => (
          <div class="rounded-2xl bg-white/5 border border-white/10 p-6 backdrop-blur">
            <div class="text-3xl font-semibold text-white">
              {stat.value}
            </div>
            <div class="mt-1 text-white/70" data-i18n={stat.labelKey}>
              ...
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>