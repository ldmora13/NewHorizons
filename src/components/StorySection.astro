---
/* =========================
   Types
========================= */
export interface StoryStat {
  value: string;
  label: string;
}

export interface StorySectionProps {
  id?: string;
  title: string;
  paragraphs: string[];
  stats: StoryStat[];
}

/* =========================
   Sample Data
========================= */
const {
  id = "story",
  title = "Our Story",
  paragraphs = [
    "Founded by ocean lovers, divers, and explorers, Ocean Travel began with a simple belief: the ocean should be experienced with respect, safety, and wonder.",
    "Over the years, we have partnered with trusted local operators across the globe, designing journeys that balance adventure, comfort, and environmental responsibility.",
    "From remote coral reefs to luxury liveaboard expeditions, every itinerary reflects our commitment to authentic ocean travel.",
  ],
  stats = [
    { value: "12+", label: "Global Destinations" },
    { value: "5K+", label: "Happy Travelers" },
    { value: "150+", label: "Curated Experiences" },
    { value: "100%", label: "Licensed & Insured" },
  ],
} = Astro.props as StorySectionProps;
---

<!-- Story Section -->
<section
  id={id}
  class="relative py-16 md:py-20 overflow-hidden"
>
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">

      <!-- Text -->
      <div>
        <h2 class="text-3xl md:text-4xl font-semibold text-white">
          {title}
        </h2>

        {paragraphs.map((text) => (
          <p class="mt-4 text-white/70 leading-relaxed">
            {text}
          </p>
        ))}
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 gap-6">
        {stats.map((stat) => (
          <div class="rounded-2xl bg-white/5 border border-white/10 p-6 backdrop-blur">
            <div class="text-3xl font-semibold text-white">
              {stat.value}
            </div>
            <div class="mt-1 text-white/70">
              {stat.label}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>